---
import '../style/main.css'
import Card from '../components/Card.astro';
import Base from "../layouts/base.astro";
import Hero from "../components/Hero.astro";

const all = await Astro.glob('../pages/networks/*.md');
const content = all.slice(0, 4)

---

<Base title="Home">
    <h1 class="h1">Our Networks Collection</h1>
    
    // for this you did content.map but i feel like that was incorrect because for the /networks, /comp, /printers pages we will display all the porducts and not 4
    <div class="grid grid-cols-1 md:grid-cols-4 gap-10 w-4/5 m-auto">
        {all.map(info => <Card { info } />)} 
    </div>

    
</Base>