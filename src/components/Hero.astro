---
const { title1, title2, imgPath } = Astro.props
import '@splidejs/splide/css';
---

<div class="flex items-center justify-center h-90v relative md:mt-0 mt-10">

    <div class="absolute bottom-0 right-0 z-10 w-screen h-screen md:block hidden">
        <img src={ imgPath } alt="" class="h-full w-full object-cover object-right">
    </div>


    <div class="w-full md:w-4/5  mx-auto flex flex-col md:flex-row justify-between items-center md:gap-10  relative z-20 text-black">

        <div class="grid gap-5">
            <p class="text-3xl md:text-6xl font-semibold md:text-left text-center">{ title1 }<br>{ title2 }</p>
                        
                
            <div class="flex md:w-2/3 w-full md:gap-10 text-center md:text-base text-sm">
                <a href="/computers">
                    <div>
                        <div><img src="/svg/computer.svg" alt="home-icon" class="md:w-4/5 w-2/3 mx-auto"></div>
                        <p>Computers</p>
                    </div>
                </a>

                <a href="/printers">
                    <div>
                        <div><img src="/svg/printer.svg" alt="printer-icon" class="md:w-4/5 w-1/2 mx-auto"></div>
                        <p>Printers</p>
                    </div>
            </a>

                <a href="/networks">
                    <div>
                        <div><img src="/svg/network.svg" alt="wifi-icon" class="md:w-4/5 w-1/2 mx-auto"></div>
                        <p>Networks</p>
                    </div>
                </a>
                    
            
                
            </div>

            <div class="flex gap-5 text-blue-50 md:justify-start justify-center">
                <a href="#products">
                    <button class="bg-blue-700 px-8 rounded-md py-2 md:text-lg text-sm">Products</button>
                </a>
                <a href="#contact">
                    <button class="bg-blue-700 px-8 rounded-md py-2 md:text-lg text-sm">Contact</button>
                </a>
            </div>
        </div>


<!-- Slider main container -->
<div class="swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      <div class="swiper-slide h-full">
        <img class="h-full w-full object-center object-fit" src="images/hero1.png" alt="">
      </div>
      <div class="swiper-slide h-full">
        <img class="h-full w-full object-center object-fit" src="images/hero2.png" alt="">
      </div>
      <div class="swiper-slide h-full">
        <img class="h-full w-full object-center object-fit" src="images/hero3.png" alt="">
      </div>
    </div>
  </div>

     </div>

</div>

<style>
    .swiper {
        width: 1000px;
        height: 350px;
        }

      @media only screen and (max-width: 600px) {
        .swiper {
        width: 95vw;
        height: 250px;
        margin-top: 50px;
        }
      }
</style>

<script >
// core version + navigation, pagination modules:
import Swiper from 'swiper';
import { Navigation, Pagination, Autoplay, EffectFade } from 'swiper/modules';
// import Swiper and modules styles
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
import { LOOP } from '@splidejs/splide';

// init Swiper:
const swiper = new Swiper('.swiper', {
  // configure Swiper to use modules
  modules: [Navigation, Pagination, Autoplay, EffectFade ],
    // Optional parameters
    direction: 'horizontal',
    loop: true,
    speed: 1000,
 
  // If we need pagination
  pagination: {
    el: '.swiper-pagination',
  },

  autoplay: {
        delay: 2000,
        disableOnInteraction: false,
      },

  // Navigation arrows
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },

  // And if we need scrollbar
  scrollbar: {
    el: '.swiper-scrollbar',
  },
});
</script>
